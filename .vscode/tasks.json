{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Launch Love2D",
            "type": "shell",
            "command": "C:/Program Files/LOVE/lovec.exe",
            "args": [
                "${workspaceFolder}\\src"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Generate Game Zip",
            "type": "shell",
            "command": "${workspaceFolder}\\generate.bat",
            "args": [
                "${workspaceFolderBasename}"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
            }
        }
    ]
}